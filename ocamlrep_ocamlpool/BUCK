                    "cc": {"version": "1.0.78"},
                },
            },
            "package": {
                "build": "build.rs",
            },
        },
    },
    doctests = False,
    rustc_flags = RUST_FLAGS_2018,
    unittests = False,
    deps = [
        "fbcode//common/ocaml/interop/ocamlrep:ocamlrep",
